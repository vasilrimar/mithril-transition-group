{
  "name": "mithril-transition-group",
  "version": "0.1.7",
  "description": "A set of Mithril components for creating state/class based transitions",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "lint": "tslint src/**/*.ts",
    "build": "npm run test && npm run lint && tsc -p src",
    "watch": "tsc -p src --w",
    "test": "mocha -r ts-node/register -r jsdom-global/register ./test/**/*.spec.ts",
    "test:watch": "mocha -r ts-node/register --watch -r jsdom-global/register ./test/**/*.spec.ts",
    "version": "npm run build && git add *",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasilrimar/mithril-transition-group.git"
  },
  "keywords": [
    "mithril",
    "transition"
  ],
  "author": "Vasil Rimar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasilrimar/mithril-transition-group/issues"
  },
  "homepage": "https://github.com/vasilrimar/mithril-transition-group#readme",
  "devDependencies": {
    "@types/mithril": "^1.1.16",
    "@types/mocha": "^5.2.6",
    "assert": "^1.4.1",
    "jsdom": "^14.0.0",
    "jsdom-global": "^3.0.2",
    "mithril": "^1.1.6",
    "mocha": "^6.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000"
  }
}
