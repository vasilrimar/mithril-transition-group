    "mithril": ">=2.0.4"
  },
  "devDependencies": {
    "@types/mithril": "^2.0.4",
    "@types/mocha": "^8.0.3",
    "assert": "^2.0.0",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "mithril": "^2.0.4",
    "mocha": "^8.1.3",
